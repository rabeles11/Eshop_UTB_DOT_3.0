@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}
@section Styles
{
	<link rel="stylesheet" href="~/css/Login_RegisterForm.css" type="text/css" />

}
@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
	<script src ="~/js/Validation/UniqueChar.js"></script>
}
<div class="container">
	<div class="row">

		<div class="main">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<h3>Please Log In, or <a asp-action="Register">Sing Up</a></h3>
			<div class="row">
				<div class="col-xs-6 col-sm-6 col-md-6">
					<a href="#" class="btn btn-lg btn-primary btn-block">Facebook</a>
				</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
					<a href="#" class="btn btn-lg btn-info btn-block">Google</a>
				</div>
			</div>
			<div class="login-or">
				<hr class="hr-or">
				<span class="span-or">or</span>
			</div>

			<form role="form" asp-action="Login" method="post">
				<div class="form-group">
					<label asp-for="@Model.Username">UserName</label>
					<input asp-for="@Model.Username" class="form-control">
					<span asp-validation-for="@Model.LoginFailed" class="text-danger"></span>

				</div>
				<div class="form-group">
					<a class="pull-right" href="#">Forgot password?</a>
					<label asp-for="@Model.Password">Password</label>
					<input asp-for="@Model.Password" class="form-control">
					<span asp-validation-for="@Model.LoginFailed" class="text-danger"></span>
				</div>
				<div class="checkbox pull-right">
					<label>
						<input type="checkbox">
						Remember me
					</label>
				</div>
				<button type="submit" class="btn btn btn-primary">
					Log In
				</button>
			</form>

		</div>

	</div>
</div>
