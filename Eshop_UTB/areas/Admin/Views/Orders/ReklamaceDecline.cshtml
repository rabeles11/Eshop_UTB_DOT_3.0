@model Eshop_UTB.Models.Order

@{
	ViewData["Title"] = "Zamítnutí Reklamace";
}


<h1>Zamítnutí Reklamace</h1>
@{

	<h1>Details</h1>

	<div>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.TotalPrice)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.TotalPrice)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.OrderNumber)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.OrderNumber)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DuvodReklamace)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DuvodReklamace)
			</dd>

		</dl>
	</div>
	<form asp-action="ZamitnutíReklamaceText" enctype="multipart/form-data" method="post">
		<div class="form-group col-sm-4">
			<input type="hidden" asp-for="@Model.OrderNumber" class="form-control">
			<input type="hidden" asp-for="@Model.TotalPrice" class="form-control">


			<div class="form-group">
				<label asp-for="@Model.DuvodReklamace"></label>
				<textarea asp-for="@Model.DuvodReklamace" class="form-control" placeholder="Napiste důvod zamítnutí"></textarea>
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
	}
