@{
	ViewData["Title"] = "Product Detail";
}
<h1>@ViewData["Title"]</h1>

@section Styles
{
	<link rel="stylesheet" href="/css/Style.css" />
	<link href="~/css/shop-template.css" rel="stylesheet">
}


<div class="container">

	<div class="row">


		<div class="col-lg-9">
			<div class="card mt-4">
				<img class="card-img-top img-fluid" src="@Model.ImageSrc" alt="@Model.ImageAlt">
				<div class="card-body">
					<h3 class="card-title">@Model.ProductName</h3>
					<h4>$@Model.price</h4>
					<p class="card-text">@Model.ProductDescription</p>
					@*<span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
						4.0 stars*@
